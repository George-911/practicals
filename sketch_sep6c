// Capacitor Timer Reader on ESP32
const int capPin = 32; // Analog pin

void setup() {
  Serial.begin(115200);
}

void loop() {
  int capValue = analogRead(capPin); // Read capacitor voltage (0 - 4095)
  
  Serial.print("Capacitor Voltage Reading: ");
  Serial.println(capValue);
  
  delay(200); // Adjust delay for smoother or faster readings
}
